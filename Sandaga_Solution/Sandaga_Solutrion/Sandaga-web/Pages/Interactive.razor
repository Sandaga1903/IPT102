@page "/Interactive"
@using Sandaga_web.Data

<div>
    <p> Name: @Input.Name</p>
    <p> Address: @Input.Address</p>
    <p> Type: @Input.Type</p>

</div>
<EditForm Model="Input" OnInvalidSubmit="SubmitFlowerData" name="Flower-form" method="Post">
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Name"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Name"> Name</label>
            </div>

        </div>
    </div>
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Address"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Address"> Address</label>
            </div>

        </div>
    </div>
    <div class="row">
        <div class=" col-2">
            <div class=" form-floating">
                <InputText @bind-Value="Input.Type"
                           class=" form-control" />
                <label class=" form-label" for=" Input.Type"> Type</label>
            </div>

        </div>
    </div>

    <button class=" btn btn-primary" type="Submit"> Save</button>
    <button class=" btn btn-secondary" type="button" @onclick="NewFlower">New</button>
</EditForm>


@code
{
    private Flower Input { get; set; } = new();
    private string? _Name = null;
    private const string textRoute = "/index";
    private bool showFlowerData;
    private void NewFlower() => Input = new();
    private void SubmitFlowerData()
    {
        showFlowerData = true;
    }
}
